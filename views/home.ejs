<%- include("partials/header"); -%>
    <div class="container">
        <h1>Home</h1>
        <div>
            <%= startingContent %>
        </div>
        <% for (const post of posts) { %>
            <h1>
                <%= post.title %>
            </h1>
            <div>
                <%= post.content.substring(0, 100) + "..."; %>
                    <a href="posts/<%=post._id%>">Read More</a>
            </div>
            <% } %>
    </div>

    <%- include("partials/footer"); -%>